{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "labels": {
      "category": "database",
      "component": "mongo"
    },
    "name": "mongo-svc"
  },
  "spec": {
    "ports": [
      {
        "name": "connection-port",
        "port": 27017,
        "protocol": "TCP",
        "targetPort": "connection-port"
      }
    ],
    "selector": {
      "app": "mongo-svc"
    },
    "sessionAffinity": "None"
  }
}